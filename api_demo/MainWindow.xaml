<Window x:Class="api_demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:api_demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="GetFullName" Content="Получить данные" HorizontalAlignment="Left" Margin="177,155,0,0" VerticalAlignment="Top" Foreground="#FFE600F3" Background="#FFDEDEDE" Grid.ColumnSpan="2" Click="GetFullName_Click"/>
        <Button x:Name="SendTestResult" Content="Отправить результат теста" HorizontalAlignment="Left" Margin="163,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2" Click="SendTestResult_Click"/>
        <TextBlock x:Name="TextBoxFullName" HorizontalAlignment="Left" Margin="179,155,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="#FFE60000" Grid.Column="1"/>
        <TextBlock x:Name="TextBoxResult" HorizontalAlignment="Left" Margin="196,207,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="#FF0033FF" Grid.Column="1"/>

    </Grid>
</Window>
